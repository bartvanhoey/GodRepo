@inject MessageService MessageService

<PageTitle>Child</PageTitle>


<div>
    <h3>Child</h3>
    <span>Hey there, I'm @Name</span>
    <button @onclick="@(() => OnSayHi.InvokeAsync("Hi there!"))" >Say Hi</button>
    <br>
    <button @onclick="@(() => SaidHi())" >Say Hi</button>
    
    <button @onclick="@(() => MessageService.SaySomething($"Anybody Here?, I'm {Name}"))" >Say Something</button>
</div>


@code {

    [Parameter]
    public string? Name { get; set; }

    [Parameter] public EventCallback<string> OnSayHi { get; set; }

    public async Task SaidHi() => await OnSayHi.InvokeAsync("Hi there from SaidHi!");

}